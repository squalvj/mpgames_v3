#container
   width 100%
   margin-top 70px

.topnav
   overflow hidden
   background-color #e9e9e9
   position fixed
   top 0
   width 100%
   a
      float left
      display block
      color black
      text-align center
      padding 14px 16px
      text-decoration none
      font-size 21px
      &:hover
         background-color #ddd
         color black
      &.active
         background-color #2196F3
         color white
   .search-container
      float right
      button
         float right
         padding 6px 10px
         margin-top 8px
         margin-right 16px
         background #ddd
         font-size 24px
         border none
         cursor pointer
         &:hover
            background #ccc
      input[type=text]
         padding 6px
         margin-top 8px
         font-size 17px
         border none
      &.dropdown
         display inline-block

.topnav a, .dropbtn
   display inline-block
   color white
   text-align center
   padding 14 16
   text-decoration none

.dropdown-content
   display none
   position absolute
   background-color #f9f9f9
   min-width 160px
   box-shadow 0px 8px 16px 0px rgba(0,0,0,0.2)
   z-index 1
   a
      color black
      padding 12px 16px
      text-decoration none
      display block
      text-align left
      &:hover
         background-color #f1f1f1

.dropdown
   &:hover
      .dropdown-content
         display block

@media screen and (max-width: 600px)
   .topnav
      .search-container
         float none
      input[type=text]
         border 1px solid #ccc

@media screen and (max-width: 600px)   
   .topnav a, .topnav input[type=text], .topnav .search-container button
      float none
      display block
      text-align left
      width 100%
      margin 0
      padding 14px

div
   &.game
      width 100%
      height 220
      border solid 1px
      display flex
      justify-content space-between
      width 300px
      &:hover
         border 1px solid #777
      img
         width 120
         height auto
   &.judul
      padding 15px
      text-align center
      width 121
      word-wrap break-word
   &.game-wts
      width calc(100% / 6 - 20px)
      height auto
      margin 0 10px 20px
      &:hover
         border 1px solid #777
      img
         width 100%
         height auto
   &.judul-game
      text-align center
      word-wrap break-word
      padding-left 10
      padding-right 10

.list_transaksi
   height auto
   max-width 66%
   margin-left auto
   margin-right auto

.wtt
   display grid
   grid-template-columns repeat(auto-fit, minmax(273px, 1fr))
   grid-gap 30px
   width 100%
   margin-top 36px
   margin-bottom 30px

.wts
   width auto
   display flex
   flex-wrap wrap
   padding 0 calc(100% / 200px)
   margin 0 -10px
   margin-top 36px

.pembeli
   width 150
   height 200

.barang1
   width 120px
   height auto
   text-align center
   word-wrap break-word
   float left

.barang2
   float right
   width 120px
   height auto
   text-align center
   word-wrap break-word

.arrow
   align-self center

.arrow1
   align-self center
   transform rotate(180deg)

.garis-judul
   height 2px
   width 100%
   background-color blue

@media screen and (max-width: 1111px)
   div
      &.game-wts
         width calc(100% / 4 - 20px)

.pengiriman
   margin-left 30px
   background-color #8080802b
   height 388px

.deskripsi
   height 500px
   width 100%
   margin-top 10px
   iframe
      width 100%
      height 457px

.pagination
   display inline-block
   margin-left 34%
   a
      color black
      float left
      padding 8px 16px
      text-decoration none
      transition background-color .3s
      border 1px solid #ddd
      &.active
         background-color #4CAF50
         color white
         border 1px solid #4CAF50
      &:hover
         &:not(.active)
               background-color #ddd

@media screen and (max-width: 600px)
   div
      &.game-wts
         width calc(100% - 20px)
   .list_transaksi
      max-width 100%
      padding 0 30px
   .pagination
      display inline-block
      margin-left 0px
   #container
      margin-top 310px
      width 100%
   .pengiriman
      margin-left 0
   .deskripsi
      width auto
      height auto
      iframe
         width auto
         height auto

#product
   width 100%
   height auto
   display flex
   flex-wrap wrap
   margin-bottom 30px

#gambar
   img
      width 300px
      height auto
      margin-right 50px

.keterangan
   font-weight medium
   margin-bottom 5px
   padding 3px
   margin-right 50px
   flex-wrap wrap
   display flex;

.rekomendasi
   height 100%
   width 100%

.garis
   width 100%
   height 2px
   background-color black

.footer
   width 100%
   background-color #80808029
   margin-top 70px
   padding-left 30px
   padding-right 30px
   ul
      list-style none
   li
      a
         font-size small
         margin 0 0 9px 0
         color black
      &:hover
         color black

.footer-column
   width 190px
   height auto
   background-color #0000003d

.list-game-harga
   margin-left 82%
   margin-top 30px

.list-game-nama
   margin-top 30px

.list-game-product
   width 100%
   height 75px
   border 2px solid
   display flex
   &:hover
      background-color grey

.list-game-foto
   img
      border-radius 50%
      width 90px
      height 100%